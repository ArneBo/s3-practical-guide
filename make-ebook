ebook:

	# prepare handbook build
	mdslides build ebook $(CONFIG) $(SOURCE) ebook/tmp --glossary=glossary.yaml --index=$(PATTERNINDEX)

	# transclude all to one file 
	# cd ebook; multimarkdown --to=mmd --output=ebook-compiled.md ebook--master.md
	cd ebook; multimarkdown --to=mmd --output=ebook-epub-compiled.md ebook-epub--master.md

	cd ebook; multimarkdown --to=latex --output=ebook-compiled.tex ebook-compiled.md
	
	cd ebook; latexmk -pdf master.tex 
	cd ebook; mv master.pdf ../S3-practical-guide-lx.pdf
	# clean up
	cd ebook; latexmk -C
	cd ebook; pandoc ebook-epub-compiled.md -f markdown -t epub3 -s -o ../S3-practical-guide.epub